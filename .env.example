# Server Configuration
PORT=3978
NODE_ENV=development

# Entra ID Authentication (API - this external agent)
TENANT_ID=00000000-0000-0000-0000-000000000000
API_CLIENT_ID=00000000-0000-0000-0000-000000000000
API_AUDIENCE=api://00000000-0000-0000-0000-000000000000
REQUIRED_SCOPES=api://00000000-0000-0000-0000-000000000000/.default
REQUIRED_ROLES=
ALLOWED_APPIDS=00000000-0000-0000-0000-000000000000

# GitHub Models Configuration
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_MODELS_ENDPOINT=https://models.inference.ai.azure.com
# Comma-separated list of models for evaluation
GITHUB_MODELS_LIST=gpt-4o,o1-preview,gpt-4o-mini
# Default model for extraction
GITHUB_MODELS_DEFAULT=gpt-4o

# Microsoft Graph API (for approve=true actions)
# Use Client Credentials flow to get access token
GRAPH_CLIENT_ID=00000000-0000-0000-0000-000000000000
GRAPH_CLIENT_SECRET=your_client_secret_here
GRAPH_TENANT_ID=00000000-0000-0000-0000-000000000000

# Default Planner Plan ID (for task creation)
PLANNER_PLAN_ID=your_plan_id_here
PLANNER_BUCKET_ID=your_bucket_id_here

# OpenTelemetry Configuration
OTEL_EXPORTER_TYPE=console
# For OTLP exporter (e.g., Jaeger, Agent 365 UI)
# OTEL_EXPORTER_TYPE=otlp
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_SERVICE_NAME=external-agent-taskmanagement
OTEL_LOG_LEVEL=info

# PII Filtering
PII_FILTER_ENABLED=true

# Adaptive Cards (Activity responses only)
USE_ADAPTIVE_CARDS=false
